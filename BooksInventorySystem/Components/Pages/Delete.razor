

<!-- Modal -->
<div class="modal fade" id="@GetModalId(Book)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
 
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger">Delete changes</button>
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public Book? Book {get; set;}

    private string title = string.Empty;

    protected override void OnParametersSet(){
        title = $"Delete {Book?.Title}";
    }

    public static string GetModalId(Book? book){
        ArgumentNullException.ThrowIfNull(book);
        return $"deleteModal-{book.Id}";
    }
}
